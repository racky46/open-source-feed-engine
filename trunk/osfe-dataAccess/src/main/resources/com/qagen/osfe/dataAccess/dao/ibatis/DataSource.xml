<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN"
  "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="DataSource">

  <typeAlias alias="DataSource" type="com.qagen.osfe.dataAccess.vo.DataSource"/>

  <resultMap id="resultMap" class="DataSource">
    <result property="dataSourceId" column="data_source_id"/>
    <result property="description" column="description"/>
  </resultMap>

  <insert id="insert" parameterClass="DataSource">
    insert into t_data_source (
      data_source_id,
      description
    ) values (
      #dataSourceId#,
      #description#
    )
  </insert>

  <update id="update" parameterClass="DataSource">
    update t_data_source set
      data_source_id = #dataSourceId#,
      description = #description#
    where data_source_id = #dataSourceId#
  </update>

  <delete id="delete" parameterClass="DataSource">
    delete from t_data_source where data_source_id = #dataSourceId#
  </delete>

  <select id="findByPrimaryId" parameterClass="string" resultMap="DataSource.resultMap">
    select * from t_data_source where data_source_id = #value#
  </select>

  <select id="findAll" resultMap="DataSource.resultMap">
    select * from t_data_source
  </select>

</sqlMap>